{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@api/*": [
        "apps/api/src/*"
      ],
      "@web/*": [
        "apps/web/src/*"
      ]
    }
  },
  "include": [
    "apps/**/*"
  ]
}